@model Data.TodoItem
@{
    ViewBag.Title = "Save";
}

<h2>Save</h2>



<div class="row">
    <div class="col-md-12">
        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title">Add Todo Item</h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="box-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2">User :</label>
                                @Html.DropDownList("userId", new SelectList(ViewBag.User, "Id", "Name"), new { @class = "col-lg-9 form-control" })
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Task :</label>
                                @Html.TextBoxFor(model => model.Text, new { @class = "col-lg-9 form-control" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">&nbsp;</div>
                            <div class="col-md-10">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </div>

                </div>
            }
            <div class="box-footer">
                <a class="btn btn-box-tool" href="@Url.Action("Index")"><i class="fa fa-mail-reply"></i></a>
            </div>
        </div>
    </div>
</div>

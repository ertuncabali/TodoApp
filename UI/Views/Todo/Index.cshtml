@model List<Data.ApiModel.TodoResponse>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary ">
            <div class="box-header with-border">
                <h3 class="box-title">Todo List</h3>
                @Html.ActionLink("New", "Save", null, new { @class = "btn btn-success pull-right" })
            </div><!-- /.box-header -->
            <div class="box-body" style="width: 100%;">
                @*<div style="border-bottom:1px solid black;">
                    </div>*@
                <table class="table table-striped table-bordered table-responsive">
                    <thead>
                        @using (Html.BeginForm())
                        {
                            <tr>
                                <th>Content :</th>
                                <td> <input type="text" name="searchText" /> <input type="submit" value="Search" /></td>
                                <td>&nbsp;</td>
                                <td>&nbsp;</td>
                            </tr>
                        }
                        <tr>
                            <th class="hidden-xs">User </th>
                            <th>Text </th>
                            <th>Status </th>
                            <th>Operations</th>
                        </tr>
                    </thead>

                    <tbody id="tbody">
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="hidden-xs">@Html.DisplayFor(modelItem => item.UserNameSurname)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Text)</td>
                                    <td class="hidden-xs">@Html.DisplayFor(modelItem => item.Status)</td>
                                    <td>
                                        @if (item.Status == "Waiting")
                                        {
                                            @Html.ActionLink("Completed", "ChangeStatus", new { id = item.Id }, new { @class = "btn btn-primary" })
                                        }
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                    <tfoot>
                        <tr></tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>